= form_for @note do |n|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  %h2 Note
  .field
    = n.label :title
    = n.text_field :title
  .field
    = n.label :content
    = n.text_field :content

  .actions
    = n.submit 'Save'